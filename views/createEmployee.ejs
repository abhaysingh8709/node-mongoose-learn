<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Employee</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
    <%- include('common/header'); %>
    <button onclick="window.location.replace('http://localhost:4500/empl/')" class="btn btn-warning m-3">Employees</button>

    <button onclick="window.location.replace('http://localhost:4500/user')" class="btn btn-info m-3">Users</button>
    <div class="col-md-6">
    <form name="form1" method="POST" action="/empl/createEmp">
    <table class="table">
        <tr>
          <td>Select User</td>
          <td>
            <select class="form-control" name="user_id">
              <option value="">Select User</option>
              <% users.forEach(function(user){ %>
                <option value="<%= user._id %>"><%= user.name %></option>
              <% }) %>
            </select>
          </td>
        </tr>
        <tr>
          <td>Salary</td>
          <td><input class="form-control" type="text" name="salary" ></td>
        </tr>
        <tr>
          <td>Phone</td>
          <td><input class="form-control" type="text" name="phone" ></td>
        </tr>
        <tr>
          <td>Designation</td>
          <td><input class="form-control" type="text" name="designation" ></td>
        </tr>
        <tr>
          <td>Department</td>
          <td><input class="form-control" type="text" name="department" ></td>
        </tr>
        <tr>
          <td colspan="2"><input class="btn btn-success m-3" type="submit" value="Save" ></td>
        </tr>

      </table>
      </form> 
      </div>
    <%- include('common/footer'); %>    
</body>
</html>